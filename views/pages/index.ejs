<%- include('../partials/header.ejs') %>
  <title><%= title %></title>
</head>
<body>
  <div class="row">
    <div class="column">
      <h1><%= title %></h1>
      <p><%= intro %></p>
    </div>
  </div>
  <div class="row">
    <form id="myForm" action="/getPresident" method="get">
      <div class="large-6 columns">
        <select name="" id="president">
          <option value="" selected="true" disabled> -- </option>
          <% presidents.forEach(function(president, index) { %>
            <option value="<%= index + 1 %>"><%= president.first %> <%= president.middle %> <%= president.last %></option>
          <% }); %>          
        </select>
      </div>
      <div class="large-6 columns">
        <button type="button" onClick="showResult('/getPresident')" name="button">Get Details</button>
      </div>
    </form>
  </div>
  <div class="row">
    <div id="result" class="column"></div>
  </div>
  <script>
    function showResult(route) {
        var president = document.getElementById('president').value;
        var xhttp = new XMLHttpRequest();

        xhttp.onreadystatechange = function() {
            if (this.readyState == 4 && this.status == 200) {
                var response = JSON.parse(this.responseText);
                var table = `<div class="row">
                              <div class="column">
                                <table>
                                  <tr>
                                    <th>President</th>
                                    <th>Party</th>
                                    <th>Image</th>
                                  </tr>`;

                document.getElementById('result').innerHTML = '';

                for (var i = 0; i < response.length; i++) {
                  document.getElementById('result').innerHTML += 'President: ' + response[i]['first'] + ' ' + response[i]['last'];
                  table += `<tr>
                              <td>${response[i]['first']} ${response[i]['middle']} ${response[i]['last']}</td>
                              <td>${response[i]['party']}</td>
                              <td><img src="./assets/img/${response[i]['image']}" alt="Image of President ${response[i]['first']} ${response[i]['last']}"></td>
                            </tr>`
                }

                table += '</table></div></div>';

                document.getElementById('result').innerHTML = table;
            }
        };
        xhttp.open('GET', route + '?id=' + president, true);
        xhttp.send();
    }
  </script>
</body>
</html>
